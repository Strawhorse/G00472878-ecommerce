<!-- views/cart.ejs -->

<%- include("partialViews/head") %>
<%- include("partialViews/navbar") %>

<main class="container my-4">

    <h1 class="mb-3"><%= title %></h1>

    <% if (cartItems.length === 0) { %>

        <div class="alert alert-warning">
            No items in cart
        </div>

        <a class="btn btn-primary" href="/products">Go to products</a>

    <% } else { %>

        <ul class="list-group mb-3">
            <% cartItems.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">

                    <div>
                        <div class="fw-semibold"><%= item.name %></div>
                        <div class="text-muted small">Qty <%= item.qty %></div>
                    </div>

                    <div class="text-end">
                        <div class="fw-semibold">€<%= (item.price * item.qty).toFixed(2) %></div>

                        <form action="/cart/remove" method="POST" class="mt-2">
                            <input type="hidden" name="productId" value="<%= item.id %>">
                            <button class="btn btn-sm btn-outline-danger" type="submit">
                                Remove
                            </button>
                        </form>
                    </div>

                </li>
            <% }) %>
        </ul>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Total</h4>
            <h4 class="mb-0">€<%= total.toFixed(2) %></h4>
        </div>

        <div class="d-flex gap-2">

            <a class="btn btn-outline-primary" href="/products">
                Continue shopping
            </a>

            <form action="/cart/clear" method="POST" class="ms-auto">
                <button class="btn btn-outline-danger" type="submit">
                    Clear cart
                </button>
            </form>

            <form action="/order/place" method="POST">
                <button class="btn btn-success" type="submit">
                    Checkout
                </button>
            </form>

        </div>

    <% } %>

</main>

<%- include("partialViews/footer") %>
