<!-- views/products.ejs -->

<%- include("partialViews/head") %>
<%- include("partialViews/navbar") %>

<main class="container my-4">

    <h1 class="mb-3"><%= title %></h1>

    <p class="text-muted">
        Browse our small catalog (5 products)
        Click “Add to Cart” to start an order
    </p>

    <div class="row g-4">

        <% products.forEach(p => { %>
            <div class="col-12 col-sm-6 col-lg-4">

                <div class="card h-100 shadow-sm">

                    <img
                            src="/images/<%= p.image %>"
                            class="card-img-top"
                            alt="<%= p.name %>"
                    >

                    <div class="card-body d-flex flex-column">

                        <h5 class="card-title"><%= p.name %></h5>

                        <p class="card-text small text-muted"><%= p.description %></p>

                        <p class="fw-bold mb-3">€<%= p.price.toFixed(2) %></p>

                        <form action="/cart/add" method="POST" class="mt-auto">

                            <input type="hidden" name="productId" value="<%= p.id %>">
                            <input type="hidden" name="name" value="<%= p.name %>">
                            <input type="hidden" name="price" value="<%= p.price %>">

                            <div class="input-group">
                                <input
                                        type="number"
                                        name="qty"
                                        class="form-control"
                                        value="1"
                                        min="1"
                                        max="10"
                                        required
                                >
                                <button type="submit" class="btn btn-primary">
                                    Add to Cart
                                </button>
                            </div>

                        </form>

                    </div>
                </div>

            </div>
        <% }) %>

    </div>

</main>

<%- include("partialViews/footer") %>
