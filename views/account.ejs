<%- include("partialViews/head") %>
<%- include("partialViews/navbar") %>


<main class="container my-4">

    <!-- Page heading -->
    <h1 class="mb-3"><%= title %></h1>


    <!-- Order summary -->
    <h4 class="mb-3">Order summary</h4>


    <% if (cartItems.length === 0) { %>

        <div class="alert alert-warning">
            No items in cart
        </div>

        <a href="/products" class="btn btn-primary">
            Go to products
        </a>

    <% } else { %>

        <ul class="list-group mb-3">

            <% cartItems.forEach(item => { %>

                <li class="list-group-item d-flex justify-content-between align-items-center">

                    <div>
                        <div class="fw-semibold"><%= item.name %></div>
                        <div class="text-muted small">Qty <%= item.qty %></div>
                    </div>

                    <div class="fw-bold">
                        €<%= (item.price * item.qty).toFixed(2) %>
                    </div>

                </li>

            <% }) %>

        </ul>


        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="fs-5 fw-semibold">Total</div>
            <div class="fs-5 fw-bold">€<%= total.toFixed(2) %></div>
        </div>


        <div class="d-flex gap-2">

            <a href="/cart" class="btn btn-outline-secondary">
                Back to cart
            </a>

            <form action="/order/place" method="POST" class="m-0 ms-auto">
                <button type="submit" class="btn btn-success">
                    Place order
                </button>
            </form>

        </div>

    <% } %>

</main>


<%- include("partialViews/footer") %>
